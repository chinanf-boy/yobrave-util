{
	"name": "yobrave-util",
	"version": "0.0.0",
	"description": "my util",
	"license": "MIT",
	"main": "dist/yobrave-util.js",
	"module": "dist/yobrave-util.m.js",
	"repository": "chinanf-boy/yobrave-util",
	"author": {
		"name": "chinanf-boy",
		"email": "865501259@qq.com",
		"url": "http://llever.com"
	},
	"engines": {
		"node": ">=4"
	},
	"scripts": {
		"test": "npm run build && nyc ava -v",
		"dev": "microbundle watch",
		"build": "microbundle build yobrave-util.js",
		"precommit": "lint-staged",
		"pub": "npm run test && npm run npmUp && npm run git",
		"npmUp": "npm version patch && npm publish",
		"git": "git push && git push --tags"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"size-limit": [
		{
			"path": "dist/yobrave-util.js",
			"gzip": false
		}
	],
	"lint-staged": {
		"linters": {
			"*.{js,json,css,md}": [
				"prettier --single-quote --trailing-comma es5 --write",
				"git add"
			]
		},
		"ignore": [
			"**/dist/*.js"
		]
	},
	"files": [
		"src",
		"lib"
	],
	"keywords": [
		"yobrave"
	],
	"dependencies": {
		"turbocolor": "^2.6.1"
	},
	"devDependencies": {
		"ava": "^0.25.0",
		"codecov": "^3.0.2",
		"husky": "1.0.0-rc.13",
		"lint-staged": "^7.0.0",
		"microbundle": "^0.4.4",
		"nyc": "^11.8.0"
	},
	"nyc": {
		"reporter": [
			"lcov",
			"text"
		]
	}
}
